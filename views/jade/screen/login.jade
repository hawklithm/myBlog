extends ../includes/layout/layoutlogin
block loginBox
    .row
        .span4.offset4
            .well
                legend Sign in to WebApp
                form#loginForm(method='POST', action='/login.input', accept-charset='UTF-8', onsubmit="return check()")
                    .alert.alert-error
                        a.close(data-dismiss='alert', href='#') x
                        | 用户名或密码不正确
                    input.span3(placeholder='Username', type='text', name='username')
                    input.span3(placeholder='Password', type='password', name='password')
                    label.checkbox
                        input(type='checkbox', name='remember', value='1')
                        | Remember Me
                    button.btn-info.btn(type='submit') Login
    script(language='JavaScript').
        function check(){
            var form = document.getElementById("loginForm");
            form.password.value = calcMD5(form.password.value);
            return true;
        }

